<!-- ACTIONS -->
  <section id="" style="background-image:url(img/dif2.png)" class="mt-5">
    <div class="container">
      <div class="row">
          
        <div class="col-md-2 mr-1 ml-1 mt-5"> 
          <a href="/kiosko" class="">
              <button class="btn btn-light pl-5 pr-5 mt-4" data-dismiss="">
                  <i class="fas fa-arrow-left"></i>  Regresar
              </button> 
          </a> 
        </div>

        <div class="col-md-5  mr-1 ml-1 mt-5">
            <h2><i class="fas fa-home mt-4"></i> Modificación de kioskos </h2>
        </div>
  
        <div class="col-md-2  mr-1 ml-1 mt-5 mb-5 text-right" data-toggle="tooltip" data-placement="bottom" title="Eliminar este kiosko">
            <div class="form-group"> 
                <a data-toggle="modal" data-target="#modconfirmar" class="btn btn-danger pl-5 pr-5 mt-4" style="color: white;">
              <i class="fas fa-trash-alt"></i> Eliminar
             </a>
            </div>
        </div>
        
        <div class="col-md-2 mr-1 ml-5 mt-5">
          <a href="" data-toggle="modal" data-target="#prodmodalhelp">
          <h1 class="mt-3"><i class="fas fa-question-circle text-right text-dark" data-toggle="tooltip" data-placement="right" title="¿Necesitas ayuda acerca de como funciona la interfaz? ¡Haz click aquí!"></i></h1>
          </a>
        </div> 
          
      </div>
    </div>
  </section> 


  <!-- POSTS -->
<section id="posts">

    <div class="container">
        <div class="row">
           <div class="col-md-12">
               <div class="container">
                 <form method="POST" action="/actualizarKiosko">
      <div class="row">

           <div class="col-md-12">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el nombre del kiosko, debe ser único">
                    <h6 class="">Nombre del kiosko <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Kiosko centro..." value="<%= producto.user %>">
              </div>
          </div>

           <div class="col-md-6">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el primer nombre del encargado del kiosko">
                    <h6 class="">Nombre del encargado <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="text" class="form-control" id="encargado" name="encargado" placeholder="Juan" value="<%= producto.attendantName %>">
              </div>
          </div>

          <div class="col-md-6">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el segundo nombre del encargado del kiosko">
                    <h6 class="">Apellidos del encargado <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="text" class="form-control" id="snencargado" name="snencargado" placeholder="Perez" value="<%= producto.attendantSecondName %>">
              </div>
          </div>
         
          <div class="col-md-6">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la calle donde se encuentra el kiosko">
                    <h6 class="">Calle <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="text" class="form-control" id="inputAddress" name="inputAddress" placeholder="Argentina #123" value="<%= producto.street %>">
            </div>
          </div>

          <div class="col-md-6">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la colonia donde se encuentra el kiosko">
                    <h6 class="">Colonia <i class="fas fa-info-circle"></i></h6>
                   </button>
                  <input type="text" class="form-control" id="inputAddress2" name="inputAddress2" placeholder="Col soledad..." value="<%= producto.suburb %>">
              </div>
          </div>
          
          <div class="col-md-12">
              <div class="form-group text-center">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el código postal donde se encuentra el kiosko">
                    <h6 class="">Código postal <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="text" class="form-control" id="inputZip" name="inputZip" placeholder="5280..." value="<%= producto.zipcode %>">
              </div>
          </div>

           <div class="col-md-6">
              <div class="form-group">
                   <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el correo electrónico del kiosko">
                    <h6 class="">Correo electrónico <i class="fas fa-info-circle"></i></h6>
                   </button>
                  <input type="email" class="form-control" id="inputEmail4" name="inputEmail4" placeholder="kiosko@gmail.com" value="<%= producto.email %>">
              </div>
          </div>

          <div class="col-md-6">
              <div class="form-group">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el correo eletrónico secundario del kiosko">
                    <h6 class="">Correo electrónico Alternativo <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <input type="email" class="form-control" id="inputEmail2" name="inputEmail2" placeholder="kiosko2@gmail.com" value="<%= producto.otheremail %>">
              </div>
          </div>

          <div class="col-md-12">
              <div class="form-group"> 
                  <button class="btn btn-success" data-dismiss="" data-toggle="tooltip" data-placement="right" title="Guarda todos los cambios de este kiosko"><i class="fas fa-check-circle"></i> Guardar</button> 
              </div>
          </div>

      </div>
    </form>
  </div>
            
           </div>
        </div>
    </div>
</section>
           
   <!-- Modal para confirmar eliminacion -->    
   <div class="modal fade" id="modconfirmar">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header bg-dark text-white">
            <h5 class="modal-title">Seguro que desea eliminar el siguiente kiosko?</h5>
            <button class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4><%= producto.user %></h4>
              <div class="form-group"> 
                  <a href="/eliminarKiosko/<%= producto.user %>" class="btn btn-danger">
                    Si
                   </a>
                   
                  <a  class="btn btn-danger" data-dismiss="modal" style="color: white;">
                     No
                    </a>
                   </div>
          </div>
         
          </div>
        </div>
      </div>


  <!-- FOOTER -->
