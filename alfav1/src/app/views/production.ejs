<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pedidos</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
    
        <link rel="stylesheet" href="css/bootstrap.css">
        <link rel="stylesheet" href="css/style.css">
        
    </head>
    <body id="home" data-spy="scroll" data-target="#main-nav" style="background-image:url(img/dif2.png)">
        <nav id="navbar" class="navbar navbar-expand-md navbar-light fixed-top bg-light" id="main-nav">
            <div class="container">
                <a href="/" class="navbar-brand">
                    <img src="../logo/homelogo-01.png" width="180px" height="32px" alt="">
                </a>
                
          <li class="nav-item pt-3">
            <a href="/prodd" class="nav-link"><h1 class="lead" style="font-size: 22px"> Productos </h1></a>
          </li>
         
          <li class="nav-item pt-3">
            <a href="/pro" class="nav-link"><h1 class="lead" style="font-size: 22px"> Producción </h1></a>
          </li>    
         
          <li class="nav-item mt-3 pb-2">
              <button type="button" class="btn btn-primary">
                <a id="shoppingBag" href="#">
                <i class="fas fa-user text-white"></i>
                <span class="badge badge-light text-secondary">ADMIN</span>
                <span class="sr-only">unread messages</span>
                </a>
             </button>
          </li>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                    </ul>
                </div>
            </div>
        </nav>
        <!-- NAV -->
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Periodo de tiempo que desea ver:</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option value="" disabled selected></option>
                            <option value="1">Día</option>
                            <option value="2">Semana</option>
                            <option value="3">Quimcena</option>
                            <option value="4">Mes</option>
                            <option value="5">Trimestre</option>
                        </select>
                    </div>
            </div>
                <div class="col-md-4"></div>
                <form method="get" action="/pro">
                    <div class="col-md-4 text-center-center">
                        <button type="submit" class="btn btn-primary" >Actualizar</button>
                    </div>
                </form>
            </div>
            <hr>
            <div class="row">
                    <table class="table table-sm table-hover">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Articulo</th>
                                <th scope="col">Fecha de pedido</th>
                                <th scope="col">Estatus</th>
                                <th scope="col">Detalles</th>
                                <tr scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            <!--Recupera datos-->
                            <% productos.forEach(producto => { %>
                                
                                <tr>
                                    <td><%= producto.idVenta %></td>
                                    <td><%= producto.product %></td>
                                    <td ><%= producto.fecha %></td>
                                    <td>
                                        <div class="form-group">
                                            <select class="form-control  pb-2 mt-2" id="exampleFormControlSelect1" style="font-size: x-small;">
                                                    <% if(producto.stat == 1){ %>
                                                        <option value="1" disabled selected>Recibido</option>        
                                                    <% } else{ %>  
                                                        <option value="1" >Recibido</option>        
                                                    <% } %>
                                                    <% if(producto.stat == 2){ %>
                                                        <option value="2" disabled selected>En producción</option>        
                                                    <% } else{ %>  
                                                        <option value="2">En producción</option>
                                                    <% } %>
                                                    <% if(producto.stat == 3){ %>
                                                        <option value="3" disabled selected>Terminado</option>        
                                                    <% } else{ %>  
                                                        <option value="3">Terminado</option>
                                                    <% } %>
                                                    <% if(producto.stat == 4){ %>
                                                        <option value="4" disabled selected>Enviado</option>        
                                                    <% } else{ %>  
                                                        <option value="4">Enviado</option>
                                                    <% } %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="#" data-toggle="modal" data-target="#miModal<%= producto.idVenta %> ">
                                            Detalles del pedido
                                        </a>
                                        <div class="modal fade" id="miModal<%= producto.idVenta %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel"><%= producto.product %></h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col">
                                                                    <img src="/img/fr1.JPG" width="180px" height="200px" alt="">
                                                            </div>
                                                            <div class="col">
                                                                <p>Categoría: <%= producto.categor %></p>
                                                                <p>Subcategoría: <%= producto.subcategor %></p>
                                                                <p>Medidas: <%= producto.ancho %> X <%= producto.alto %> </p>
                                                                <p>Cantidad: <%= producto.cant %></p>
                                                                <p>Usuario: <%= producto.usuario %></p>
                                                                <p>C.P.: <%= producto.cp %></p>
                                                                <p>Calle: <%= producto.calle %></p>
                                                                <p>Precio: <%= producto.precio %></p>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="submit">Guardar Status</button>
                                    </td>  
                                </tr>
                                <% })%>
                            </tbody>
                        </table>
                                        
                    </div>
                </div>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
                <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
                <!-- FOOTER -->
                <footer id="main-footer" class="pt-3 pb-5 text-white" style="background-image:url(img/dif3.png)">
                    <div class="container mb-5">
                      <div class="row text-center">
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-1">
                                <i class="fab fa-facebook fa-3x"></i>
                            </div>
                            <div class="col-md-1">
                                <i class="fas fa-envelope fa-3x"></i>
                            </div>
                            <div class="col-md-1">
                                <i class="fas fa-phone-square fa-3x"></i>
                            </div>
                            <div class="col-md-1">
                                <i class="fas fa-map-marker-alt fa-3x"></i>
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row text-center">
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-4">
                                <h6 class="lead" style="font-size: 15px">
                                    <span id="year"></span>
                                    &copy; uPrint.com <br> Todos los Derechos Reservados
                                </h6>
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-dark">Terminos & Condiciones</button>
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-dark">Aviso de Privacidad</button>
                            </div>
                        </div>
                    </div>      
                </footer>
                <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
                crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
                crossorigin="anonymous"></script>
              
                <script>
                    // Get the current year for the copyright
                    $('#year').text(new Date().getFullYear());
                    // Init Scrollspy
                    $('body').scrollspy({ target: '#main-nav' });
                    // Smooth Scrolling
                    $("#main-nav a").on('click', function (event) {
                    if (this.hash !== "") {
                        event.preventDefault();
                        const hash = this.hash;
                        $('html, body').animate({
                            scrollTop: $(hash).offset().top
                        }, 800, function () {
                            window.location.hash = hash;
                        });
                    }
                });
            </script>
              
            <script>
                $('.carousel').carousel({
                    interval: 3000,
                    keyboard: true,
                    pause: 'hover',
                    wrap: true
                });
              
                $('#slider4').on('slide.bs.carousel', function () {
                    console.log('SLIDE!');
                });
              
                $('#slider4').on('slid.bs.carousel', function () {
                    console.log('SLID!');
                });
              
            </script>
            <script src="./index.js"></script>
              
        </body>
    
</html>